<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background2"
    android:orientation="vertical"
    tools:context=".MyProfileActivity">

    <TextView
        android:id="@+id/screennametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/white"
        android:fontFamily="@font/montserratmedium"
        android:padding="20dp"
        android:text="@string/myprofiletext"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/itemlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/premiumtv"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/textgrey"
                android:fontFamily="@font/montserratsemibold"
                android:padding="5dp"
                android:text="@string/premiumtext"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"


                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/arrowicon"
                android:layout_toRightOf="@+id/arrowicon"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholderim"
                app:srcCompat="@drawable/placeholderim"
                tools:srcCompat="@drawable/placeholderim" />

            <TextView
                android:id="@+id/title"
                android:layout_width="183dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"

                android:layout_toStartOf="@+id/pointsicon"
                android:layout_toLeftOf="@+id/pointsicon"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="bottom"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="ИМЯ"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="183dp"
                android:layout_height="52dp"
                android:layout_below="@+id/title"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="-1dp"
                android:layout_toStartOf="@+id/pointsicon"
                android:layout_toLeftOf="@+id/pointsicon"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:fontFamily="@font/montserratregular"
                android:paddingLeft="10dp"
                android:text="муж"
                android:textColor="@color/textgrey2"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/pointsicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="35dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:rotation="180"
                android:scaleType="center"
                android:scaleX="0.4"
                android:scaleY="0.4"
                app:srcCompat="@drawable/iconarrow" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moneytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/montserratbold"
                android:shadowColor="@android:color/black"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="4.0"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="@color/goldcolor"
                android:textSize="14sp" />

            <Button
                android:id="@+id/historybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:layout_marginRight="15dp"
                android:background="@drawable/roundedwhite"
                android:fontFamily="@font/montserratsemibold"
                android:text="@string/historytext"
                android:textAllCaps="true"
                android:textColor="@color/buttons_recom_color"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:background="@drawable/roundedwhite"
                android:fontFamily="@font/montserratsemibold"
                android:text="@string/buytext"
                android:textAllCaps="true"
                android:textColor="@color/buttons_recom_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/copyidbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/montserratextrabold"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Button"
                android:textColor="@color/buttons_recom_color" />

            <LinearLayout
                android:id="@+id/partnerslay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accauntimp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/myaccauntsicon" />

                <TextView
                    android:id="@+id/accaounttvp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/partnerstext"
                    android:textColor="@android:color/black" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accauntim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/myaccauntsicon" />

                <TextView
                    android:id="@+id/accaounttv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/accaunttext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/preferenceim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/preficon" />

                <TextView
                    android:id="@+id/preftv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/preftext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nitificationsim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/notificon" />

                <TextView
                    android:id="@+id/notifictv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/notificationstext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lockim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/lockicon" />

                <TextView
                    android:id="@+id/passcodlocktv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/passcodelocktext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/privacyim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/privaticon" />

                <TextView
                    android:id="@+id/privacytv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/privacytext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feedbackim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/feedbackicon" />

                <TextView
                    android:id="@+id/feedbacktv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/feedbacktext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aboutim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/iconuserid" />

                <TextView
                    android:id="@+id/abouttv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/abouttextru"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/exitl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/exitim"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/iconuserid" />

                <TextView
                    android:id="@+id/exittv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/exittext"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <ImageButton
            android:id="@+id/findiconbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icfind" />

        <ImageButton
            android:id="@+id/messagebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icmessages" />

        <ImageButton
            android:id="@+id/friendsbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icchats" />

        <ImageButton
            android:id="@+id/noticbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icnotification" />

        <ImageButton
            android:id="@+id/profilbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/icprofilegreen" />
    </LinearLayout>


</LinearLayout>
